---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import SharkImg from "@assets/vectors/shark.png";
---

<!--
<div class="absolute -top-20 left-0 -z-10 h-1/2 w-1/3 rounded-full bg-pink-500 opacity-10 blur-[6rem]"></div>
<div class="absolute -left-20 top-0 -z-10 h-1/2 w-1/3 rounded-full bg-indigo-500 opacity-10 blur-[6rem]"></div> -->
<main class="my-10 md:my-16">
  <main class="grid place-items-center lg:grid-cols-2">
    <div class="hidden py-6 md:order-1 md:block dark:invert">
      <Picture src={SharkImg} alt="Shark" />
    </div>

    <div class="flex flex-col items-center lg:items-start">
      <h1 class="max-w-2xl text-center text-3xl font-bold md:text-4xl lg:text-start lg:text-5xl lg:tracking-tight xl:tracking-tighter">
        Intelligent Job Matching, Effortless Success
      </h1>
      <p class="mt-4 max-w-xl text-center text-lg text-gray-600 lg:text-start dark:text-gray-400">
        ClickJob uses AI to match you with great job opportunities based on your skills and interests. Find your next role with ease.
      </p>
      <div class="mt-6 flex flex-col justify-center gap-3 sm:flex-row">
        <Link
          href="#"
          href="https://web3templates.com/templates/ClickJob-starter-website-template-for-astro"
          target="_blank"
          class="flex items-center justify-center gap-1"
          rel="noopener">
          <Icon class="h-5 w-5 text-white dark:text-black" name="lucide:file-text" />

          Upload your resume
        </Link>
        <Link
          size="lg"
          style="outline"
          rel="noopener"
          href="https://github.com/surjithctly/ClickJob"
          class="flex items-center justify-center gap-1"
          target="_blank">
          <Icon class="h-4 w-4 text-black dark:text-white" name="lucide:search" />
          View Openings
        </Link>
      </div>
    </div>
  </main>
</main>
