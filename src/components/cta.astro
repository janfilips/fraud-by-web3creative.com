---
import { Icon } from "astro-icon/components";
---

<section>
  <div class="relative mx-auto mt-20 max-w-5xl overflow-hidden rounded-lg bg-black dark:bg-gray-900">
    <svg width="800" height="600" viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute left-0 top-0 opacity-70">
      <g clip-path="url(#clip0_851_117)">
        <g opacity="0.8" filter="url(#filter0_f_851_117)">
          <path d="M-69 -67L-70.5 -71.5L621 350L534.5 419.5L376.5 481.181L233.5 445.5L-69 -67Z" fill="url(#paint0_linear_851_117)"></path>
        </g>
      </g>
      <defs>
        <filter
          id="filter0_f_851_117"
          x="-130"
          y="-131"
          width="810.5"
          height="671.682"
          filterUnits="userSpaceOnUse"
          color-interpolation-filters="sRGB">
          <feFlood flood-opacity="0" result="BackgroundImageFix"></feFlood>
          <feBlend mode="normal" in="SourceGraphic" in2="BackgroundImageFix" result="shape"></feBlend>
          <feGaussianBlur stdDeviation="29.75" result="effect1_foregroundBlur_851_117"></feGaussianBlur>
        </filter>
        <linearGradient id="paint0_linear_851_117" x1="-14.8261" y1="-42.0001" x2="419.674" y2="445.5" gradientUnits="userSpaceOnUse">
          <stop offset="0.0124599" stop-color="white"></stop>
          <stop offset="1" stop-opacity="0"></stop>
        </linearGradient>
        <clipPath id="clip0_851_117">
          <rect width="800" height="600" fill="white"></rect>
        </clipPath>
      </defs>
    </svg>

    <div class="relative flex flex-col items-center p-8 text-center md:px-20 md:py-20">
      <h2 class="text-2xl tracking-tight text-white md:text-4xl">Partner with Us for Talent Acquisition.</h2>
      <p class="mt-4 text-gray-400 md:text-xl">Join our network of companies leveraging AI to find the best talent effortlessly.</p>
      <form action="" class="mt-5 flex flex-col gap-3 md:flex-row">
        <input type="text" placeholder="Company Name" class="w-60 rounded-md bg-gray-800 px-4 py-2 text-white" />
        <input type="email" placeholder="Contact email" class="w-60 rounded-md bg-gray-800 px-4 py-2 text-white" />
        <button
          type="submit"
          class="inline-flex items-center justify-center gap-2 rounded-md bg-white px-4 py-2 text-black transition hover:bg-gray-200">
          <Icon name="lucide:send" /> Join Our Network
        </button>
      </form>
      <small class="mt-4 max-w-md text-xs text-gray-500">
        Become a part of a growing community of businesses finding the right candidates faster and more efficiently.
      </small>
    </div>
  </div>
</section>
