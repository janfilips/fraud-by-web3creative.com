---
import Card from "@components/ui/card.astro";
import Badge from "@components/ui/badge.astro";
import { Icon } from "astro-icon/components";

// const { job } = Astro.props;
const jobs = [
  {
    title: "Senior Product Manager - Remote",
    category: "Product Management",
    type: "contract",
    location: "New York",
    remote: true,
    applicants: 5,
    posted: "1 week ago",
    logo: "logos/fingood",
    company: "Fingood",
  },
  {
    title: "Frontend Engineering Manager - Remote",
    category: "Information Technology Engineering Manager",
    type: "contract",
    location: "San Francisco",
    remote: true,
    applicants: 17,
    posted: "1 week ago",
    logo: "logos/freelo",
    company: "Freelo",
  },
  {
    title: "Graphic Designer using Kittl",
    category: "Arts and Design",
    type: "contract",
    location: "London",
    remote: true,
    applicants: 10,
    posted: "1 week ago",
    logo: "logos/glami",
    company: "Glami",
  },
  {
    title: "Front End Engineer - Full Time",
    category: "Information Technology",
    type: "full-time",
    location: "Berlin",
    remote: true,
    applicants: 2,
    posted: "1 week ago",
    logo: "logos/webglobe",
    company: "Webglobe",
  },
  {
    title: "Financial Management Specialist, Realiste AI",
    category: "Finance",
    type: "full-time",
    location: "Paris",
    remote: true,
    applicants: 8,
    posted: "1 week ago",
    logo: "logos/siemens",
    company: "Siemens",
  },
];
---

<section class="mx-auto mt-6 max-w-screen-lg lg:mt-16">
  <h2 class="text-2xl font-bold lg:text-4xl lg:tracking-tight">Recent Hot Offers</h2>
  <div class="mt-6 grid gap-4">
    {
      jobs.map((job) => (
        <Card class="border-l-2 border-l-red-500">
          <details>
            <summary class="cursor-pointer list-none [&::-webkit-details-marker]:hidden">
              <div class="flex  min-w-0 flex-col items-start gap-3 lg:flex-row lg:items-center lg:gap-6">
                <div class="px-3 lg:self-center dark:invert">
                  <Icon name={job.logo} class="h-10 w-24" />
                </div>
                <div class="flex flex-1 flex-col items-start gap-2">
                  <div>
                    <span class="text-sm text-gray-500">{job.company}</span>

                    <h3 class="flex items-center gap-1 text-lg font-semibold lg:text-xl">
                      <span>{job.title} </span> <Badge variant="danger">Hot</Badge>
                    </h3>
                  </div>

                  <div class="flex items-center gap-2">
                    <Badge variant="hotpink">{job.type}</Badge>
                    {job.remote && <Badge variant="warning">Remote</Badge>}
                    <span class="text-sm text-gray-600 dark:text-gray-400">{job.applicants}+ applicants</span>
                  </div>
                </div>

                <div class="flex w-full min-w-0 flex-col gap-2 lg:w-auto lg:items-end">
                  <span class="flex items-center gap-1">
                    <Icon name="lucide:map-pin" /> <span class="text-sm">{job.location}</span>
                  </span>
                  <time datetime="" class="flex items-center gap-1 text-sm text-gray-800 dark:text-gray-400">
                    <span>Posted {job.posted}</span>
                  </time>

                  <div class="flex w-full min-w-0 lg:w-auto">
                    <Badge variant="outline" class="truncate">
                      {job.category}
                    </Badge>
                  </div>
                </div>
              </div>
            </summary>
            <div class="-mx-4 -mb-3 mt-5 rounded-b-lg bg-gray-100 p-5 shadow-inner lg:-mx-6 lg:-mb-4 dark:bg-gray-800">
              <p class="text-sm lg:text-base">
                Join EventMobi as a Frontend Engineering Manager in a fully remote position. Lead a team of 8-10 engineers, focusing on people
                management, process/project management, and hands-on coding/reviews. Drive technical strategy, project delivery, and cross-functional
                collaboration to shape and execute the company's technical vision. Enjoy competitive compensation, stock options, generous time-off,
                and a supportive remote work environment. Apply now to be part of a dynamic team revolutionizing the event planning industry.
              </p>
              <p class="mt-2 text-sm leading-loose lg:text-base">
                <strong>Industry:</strong> Internet Software & Services <br />
                <strong>Number of employees:</strong> 100-500 employees
              </p>
              <div>
                <div class="mt-3 flex flex-wrap gap-2">
                  {["People Management", "Project Management", "Technical Strategy", "Cross-functional Collaboration", "Remote Work"].map((item) => (
                    <Badge variant="secondary" class="truncate">
                      {item}
                    </Badge>
                  ))}
                </div>
              </div>
            </div>
          </details>
        </Card>
      ))
    }
  </div>
  <div class="mt-8 text-center">
    <a href="/blog" class="rounded-md bg-black px-5 py-3 text-white transition hover:bg-gray-800">View All Jobs â†’</a>
  </div>
</section>
